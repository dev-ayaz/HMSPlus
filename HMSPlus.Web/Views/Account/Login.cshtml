<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">

    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "loginForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <h3 class="form-title">Login to your account</h3>
                        @*<div class="alert alert-danger ">
                                <button class="close" data-close="alert"></button>
                                <span> @Html.ValidationSummary() </span>
                            </div>*@
                        <div class="form-group">
                            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                            <label class="control-label visible-ie8 visible-ie9">Email</label>
                            <div class="input-icon">
                                <i class="fa fa-user"></i>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Username" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                            <div class="input-icon">
                                <i class="fa fa-lock"></i>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "Password" })

                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-actions">
                            <label class="rememberme mt-checkbox mt-checkbox-outline">
                                @Html.CheckBoxFor(m => m.RememberMe) Remember me
                                <span></span>
                            </label>
                            <button type="submit" class="btn green pull-right"> Login </button>
                        </div>

                        //Enable this once you have account confirmation enabled for password reset functionality
                        <div class="forget-password">
                            <h4>Forgot your password ?</h4>
                            <p>
                                no worries, click
                                @Html.ActionLink("here", "ForgotPassword") to reset your password.

                            </p>
                        </div>

                    }
                </section>
            </div>

        </div>
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">   @DateTime.Now.Year &copy; International Aramoon Co.Ltd </div>
