@model List<HMSPlus.Web.Areas.Users.Models.MenuViewModel>

@{
    Layout = null;
}


<div class="page-sidebar-wrapper">

    <div class="page-sidebar navbar-collapse collapse">
        <ul class="page-sidebar-menu   " data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200">
           
            @if(!Model.Any()){

                <li class="nav-item start ">
                    @*@Html.IsSelectedMenu("/Administration/Dashboard")*@
                    <a href="../Home/Index" class="nav-link nav-toggle">
                        <i class="icon-home"></i>
                        <span class="title">Home</span>
                    </a>
                </li>

            }
            @foreach (var menu in Model)
            {
                <li class="nav-item ">
                    @*@Html.IsParentActive(menu.Title, "active")*@
                    <a href="~/@menu.Link" class="nav-link nav-toggle">
                        <i class="@menu.Icon"></i>
                        <span class="title">@menu.Title</span>
                        <span class="selected"></span>
                        <span class="arrow "></span>@*@Html.IsParentActive(menu.Title, "open")*@
                    </a>
                    @if (menu.SubMenus.Any())
                    {
                        <ul class="sub-menu">
                            @foreach (var subMenu in menu.SubMenus)
                            {
                                <li class="nav-item start">
                                    @*@Html.IsSelectedMenu(subMenu.Link)*@
                                    <a href="~/@subMenu.Link" class="nav-link ">
                                        <i class="@subMenu.Icon"></i>
                                        <span class="title">@subMenu.Title</span>
                                    </a>
                                </li>

                            }
                        </ul>
                    }
                </li>
            }

        </ul>
        <!-- END SIDEBAR MENU -->
    </div>
    <!-- END SIDEBAR -->
</div>







