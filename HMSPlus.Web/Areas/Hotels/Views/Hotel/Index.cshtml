@{
    ViewBag.Title = "Hotels";
}


<div class="page-content">

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cogs font-purple-soft"></i>
                        <span class="caption-subject font-purple-soft bold uppercase">Hotels Managment</span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-cloud-upload"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-wrench"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                            <i class="icon-trash"></i>
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <a data-toggle="modal" data-target="#modalAddNewUser" class="btn sbold green">
                                        Add New
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <div class="dataTables_wrapper no-footer">
                        <div class="row" id="HotesList">
                            <table class="table table-striped  table-hover table-checkable order-column dataTable no-footer" id="HotelsTable">
                                <thead>
                                    <tr>
                                        <th>
                                            S.No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Type
                                        </th>
                                        <th>
                                            Rooms
                                        </th>
                                        <th>
                                            Address
                                        </th>
                                        <th>
                                            IsActive
                                        </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>


                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Areas/Hotels/Scripts/Hotel.js"></script>
    <script>
        Hotel.domConfigurations.initTable();
    </script>
}



