@model IEnumerable<HMSPlus.Web.Areas.Users.Models.RoleViewModel>

@{
    Layout = null;
    var rowNumber = 0;
}
<table class="table table-striped  table-hover table-checkable order-column dataTable no-footer">
    <thead>
        <tr>
            <th>
                S.No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(rowNumber += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-sm green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                            Actions
                            <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="@Url.Action("Permissions", "Roles", new { roleId= item.Id})">
                                    <i class="fa fa-lock"></i> Permissions
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" class="RoleEdit" data-id="@item.Id">
                                    <i class="fa fa-pencil-square"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;" class="RoleDelete" data-id="@item.Id">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </li>

                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
